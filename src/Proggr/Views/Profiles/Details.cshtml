@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<div class="row">&nbsp;</div>

<div class="row">
    <div class="span8">
        <h2>Details</h2>
        <h1 class="accent">@Model.name</h1>
    </div>
    <div class="span4">
        <img src="@Model.avatar_url&s=200" style="border-bottom: 6px solid #a200ff;" />
    </div>
</div>

<div class="row">
    <div id="repository-list" class="span12" rel="showRepos"></div>
</div>

<script type="text/javascript" src="~/Content/js/showRepos.js"></script>
<script type="text/javascript" defer="defer" src="https://api.github.com/users/@Model.login/repos?callback=showRepos"></script>
<script id="repository-template" type="text/x-handlebars-template">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
</script>